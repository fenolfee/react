{
    "ts-node": {
        "files": true,
        "transpileOnly": true
    },
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "ES2021",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}
